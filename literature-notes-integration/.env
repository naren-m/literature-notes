# Literature Notes Integration Environment Configuration

# Database Configuration
NOTES_DB_PATH=/app/data/zettelkasten.db
LOGSEQ_DIR=/app/data/logseq

# Server Configuration  
WEB_PORT=8080
API_PORT=8081
HOST=0.0.0.0

# Application Settings
DEBUG=false
FLASK_ENV=production
PYTHONPATH=/app

# Feature Flags
ENABLE_SYNTHESIS=true
ENABLE_LOGSEQ_SYNC=true
ENABLE_SMART_QUERIES=true
AUTO_SYNC_INTERVAL=86400  # 24 hours in seconds

# Performance Settings
MAX_QUERY_RESULTS=50
SYNTHESIS_MAX_NOTES=20
CACHE_TTL=3600  # 1 hour

# Security Settings (change in production)
SECRET_KEY=your-secret-key-change-me
API_KEY=your-api-key-change-me

# Optional: External Services
# REDIS_URL=redis://redis:6379/0
# POSTGRES_URL=postgresql://notes_user:password@postgres:5432/literature_notes

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/integration.log